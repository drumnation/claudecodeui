{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { 
      "dependsOn": ["^build"],
      "outputs": ["dist/**"] 
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "test": { 
      "dependsOn": ["^build", "test:unit", "test:integration", "test:e2e"],
      "outputs": [] 
    },
    "test:unit": { 
      "outputs": [] 
    },
    "test:integration": { 
      "outputs": [] 
    },
    "test:e2e": { 
      "outputs": [] 
    },
    "test:e2e:browser": { 
      "outputs": [] 
    },
    "test:storybook": {
      "dependsOn": ["build-storybook"],
      "outputs": [],
      "cache": true
    },
    "test:storybook:coverage": {
      "dependsOn": ["build-storybook"],
      "outputs": ["coverage-storybook/**"],
      "cache": true
    },
    "test:storybook:watch": {
      "cache": false,
      "persistent": true
    },
    "test:storybook:interaction": {
      "dependsOn": ["build-storybook"],
      "outputs": [],
      "cache": true
    },
    "test:storybook:e2e": {
      "dependsOn": ["build-storybook"],
      "outputs": [],
      "cache": true
    },
    "test:storybook:snapshot": {
      "dependsOn": ["build-storybook"],
      "outputs": ["__snapshots__/**"],
      "cache": true
    },
    "test:snapshot": {
      "outputs": ["__snapshots__/**"],
      "cache": true
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "cache": true
    }
  }
}