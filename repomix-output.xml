      // Detect file reference trigger (@)
      const lastAt = beforeCursor.lastIndexOf("@");
      if (lastAt > Math.max(lastSpace, lastNewline, -1)) {
        const query = beforeCursor.substring(lastAt + 1);
        if (!showFileDropdown) {
          logger.info("File dropdown triggered", {
