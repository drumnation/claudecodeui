        `(${timeStr})` +
        (result.errorCount
          ? ` - ${COLORS.yellow}${result.errorCount} issues${COLORS.reset}`
          : "") +
        (result.autoFixed ? ` ${COLORS.blue}[auto-fixed]${COLORS.reset}` : ""),
