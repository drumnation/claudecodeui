    ? Array.from(failuresByType.entries())
        .sort((a, b) => b[1].length - a[1].length)
        .map(([type, typeFailures]) => {
          const emoji =
            type === "assertion"
              ? "ðŸŽ¯"
              : type === "timeout"
                ? "â±ï¸"
                : type === "setup"
                  ? "ðŸ”§"
                  : type === "runtime"
                    ? "ðŸ’¥"
                    : "â“";
          return `### ${emoji} **${type.charAt(0).toUpperCase() + type.slice(1)} Failures** (${
            typeFailures.length
