  const args = process.argv.slice(2);
  const suite = args[0] || 'unit';
  const targetCoverage = Number(args[1]) || 85;

  const runners: Record<string, RunnerOptions> = {
    unit: {
      command: 'vitest',
      args: ['run', '--config', './src/configs/vitest/unit.ts', '--coverage'],
      suite: 'Unit',
      targetCoverage,
      maxRetries: 2,
      adjustments: {
        timeout: true,
        isolate: true,
        workers: true,
      },
    },
    integration: {
      command: 'vitest',
      args: [
        'run',
        '--config',
