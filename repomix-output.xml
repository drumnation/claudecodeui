  name: string,
  options: {
    environment?: 'node' | 'jsdom' | 'happy-dom' | 'edge-runtime';
    timeout?: 'fast' | 'medium' | 'slow' | 'ci';
    pool?: 'parallel' | 'sequential' | 'fast';
