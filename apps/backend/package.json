{
  "name": "@claude-code-ui/backend",
  "version": "1.0.0",
  "description": "Backend server for Claude Code UI",
  "scripts": {
    "clean": "rimraf dist node_modules/.cache",
    "format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "pnpm build:clean && pnpm build:compile",
    "build:clean": "rimraf dist",
    "build:compile": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development tsx watch index.ts",
    "watch": "tsx watch index.ts",
    "test": "echo 'n/a' && exit 0",
    "test:unit": "echo 'n/a' && exit 0",
    "test:integration": "echo 'n/a' && exit 0",
    "test:e2e": "echo 'n/a' && exit 0",
    "test:e2e:browser": "echo 'n/a' && exit 0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.24",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "mime-types": "^3.0.1",
    "multer": "^2.0.1",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "openai": "^5.8.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@kit/tsconfig": "workspace:*",
    "@kit/eslint-config": "workspace:*",
    "@kit/prettier-config": "workspace:*",
    "@kit/testing": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.11",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kit/eslint-config/base",
      "@kit/eslint-config/sort"
    ]
  },
  "prettier": "@kit/prettier-config"
}