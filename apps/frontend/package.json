{
  "name": "@claude-code-ui/frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend app for Claude Code UI",
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "dev": "vite --host --port 8766",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:browser": "playwright test",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:storybook": "test-storybook",
    "test:storybook:coverage": "test-storybook --coverage",
    "test:storybook:watch": "test-storybook --watch",
    "test:storybook:ci": "storybook build && test-storybook --url http://localhost:6006",
    "test:storybook:interaction": "test-storybook --config-file .storybook/test-runner-interaction.ts",
    "test:storybook:e2e": "playwright test --config .storybook/playwright.config.ts",
    "test:storybook:snapshot": "test-storybook --config-file .storybook/test-runner-snapshot.ts",
    "test:snapshot": "vitest run --config vitest.config.snapshot.ts",
    "test:snapshot:update": "vitest run --config vitest.config.snapshot.ts -u"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.38.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tailwindcss/typography": "^0.5.16",
    "@uiw/react-codemirror": "^4.23.13",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-webgl": "^0.18.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.8.1",
    "tailwind-merge": "^3.3.1",
    "twin.macro": "^3.4.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@kit/eslint-config": "workspace:*",
    "@kit/logger": "workspace:*",
    "@kit/prettier-config": "workspace:*",
    "@kit/testing": "workspace:*",
    "@kit/tsconfig": "workspace:*",
    "@playwright/test": "^1.53.2",
    "@storybook/addon-a11y": "9.0.15",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-vitest": "^9.0.15",
    "@storybook/react-vite": "^9.0.15",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.23.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/browser": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^2.1.0",
    "eslint-plugin-storybook": "^9.0.15",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.53.2",
    "postcss": "^8.4.32",
    "storybook": "^9.0.15",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8"
  },
  "peerDependencies": {
    "@storybook/test": "^8.6.14",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kit/eslint-config/base",
      "@kit/eslint-config/react",
      "@kit/eslint-config/sort",
      "plugin:storybook/recommended"
    ]
  },
  "prettier": "@kit/prettier-config",
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  }
}
