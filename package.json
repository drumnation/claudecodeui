{
  "name": "claude-code-ui",
  "version": "1.0.0",
  "description": "A web-based UI for Claude Code CLI - Monorepo root",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel --filter=@claude-code-ui/backend --filter=@claude-code-ui/frontend dev",
    "dev:ngrok": "pnpm run dev & node scripts/start-ngrok.js",
    "ngrok": "node scripts/start-ngrok.js",
    "kill": "node scripts/kill-servers.js",
    "build": "pnpm run --filter=@claude-code-ui/frontend build",
    "start": "pnpm run build && pnpm run --filter=@claude-code-ui/backend start",
    "prod": "node scripts/start-prod.js",
    "clean": "pnpm run -r clean",
    "typecheck": "pnpm run -r typecheck",
    "lint": "pnpm run -r lint",
    "format": "pnpm run -r format"
  },
  "keywords": [
    "claude",
    "ai",
    "code",
    "ui",
    "assistant",
    "monorepo"
  ],
  "author": "Claude Code UI Contributors",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
